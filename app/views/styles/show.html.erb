<div class="container round" id="main">
  <div class="row">

    <div class="col-md-7 photo">
      <ul>
      <% @style.photos.each do |photo| %>
        <li><%= image_tag photo.file.url %></li>
      <% end %>
      </ul>
    </div>

    <div class="col-md-5 info">
      <%= render 'items/user', target: @style.user %>

      <div class="summary">
        <p>
          <%= @style.body %>
        </p>
        <small class="pull-right"><i class="glyphicon glyphicon-time"></i>发布<%=time_ago_in_words(@style.created_at)%></small>
      </div>

      <!-- list here -->
      <h4 class="title"><i class="glyphicon glyphicon-shopping-cart"></i>搭配单品</h4>

      <div class="links">
        <ol>
          <% @style.items.each do |item| %>
          <li class="round">
            <span class="plus round-sm"><i class="glyphicon glyphicon-plus"></i></span>
            <div class="cover">
              <%= image_tag item.cover, size: '80x80' %>
            </div>
            <div class="item">
              <div class="title">
                <%= link_to item.title, item.url %>
              </div>
              <div class="buy">
                <em>&yen;<%= item.price %></em>
                <span><i class="glyphicon glyphicon-shopping-cart"></i>去购买</span>
              </div>
            </div>
          </li>
          <% end %>
        </ol>
      </div>

      <!-- tools here -->
      <div class="tools ">
        <ul class="pagehead-actions">
          <li>
            <%= link_to like_style_path(@style), rel: 'nofollow', class: "btn like btn-xs with-count" do %>
            <span class="glyphicon glyphicon-heart"></span>喜欢
            <% end %>
            <span class="social-count"><%= @style.likes_count || 0 %></span>
          </li>

          <li>
            <a href="/" class="btn btn-xs with-count favourite" rel="nofollow">
              <span class="glyphicon glyphicon-star"></span>收藏
            </a>
            <span class="social-count">0</span>
          </li>

          <li>
            <a href="/" class="btn btn-default btn-xs with-count" rel="nofollow">
              <span class="glyphicon glyphicon-share"></span>分享到
            </a>
            <span class="social-count">
              <%= social_share_button_tag(@style.title) %>
            </span>
          </li>
        </ul>
      </div>

      <!-- comments here -->
      <div class="comments">
        <%= render 'comments/comment', :target => @style %>
        <%= render partial: 'items/reply', collection: @comments %>
      </div>

    </div>
  </div>
</div>

<div class="container more">
  <h5 class="hd">更多搭配</h5>

  <% @styles.each do |style| %>
  <div class="row round style">
    <div class="col-md-7">
      <div class="cover">
        <%= link_to style_path style do %>
        <%= image_tag style.photos.first.file.url %>
        <% end %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="info">
        <div class="summary">
          <h4> 介绍 </h4>
          <p class="body"><%= style.body %></p>
        </div>

        <div class="links">
          <ul>
          <% style.items.each do |item| %>
            <li>
              <span class="cover"><%= link_to style_path(style) do %> <%= image_tag item.cover %><% end %></span>
              <span class="title"><%= link_to item.title,style_path(style) %></span>
              <span class="buy"><%= link_to '去购买', item.url, class: 'btn btn-xs'%></span>
              <span class="price">&yen;<%= item.price %></span>
            </li>
          <% end %>
          </ul>
        </div>

        <div class="tools">
          <ul class="pagehead-actions">
            <li>
              <%= link_to like_style_path(@style), rel: 'nofollow', class: "btn like btn-xs with-count" do %>
              <span class="glyphicon glyphicon-heart"></span>喜欢
              <% end %>
              <span class="social-count"><%= @style.likes_count || 0 %></span>
            </li>

            <li>
              <a href="/" class="btn btn-xs with-count favourite" rel="nofollow">
                <span class="glyphicon glyphicon-star"></span>收藏
              </a>
              <span class="social-count">0</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>