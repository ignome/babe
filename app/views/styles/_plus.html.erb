<% @style.items.each do |item| %>
          <li class="round">
            <span class="plus round-sm"><i class="glyphicon glyphicon-plus"></i></span>
            <div class="cover">
              <%= image_tag item.cover, size: '80x80' %>
            </div>
            <div class="item">
              <div class="title">
                <%= link_to item.title, item.url %>
              </div>
              <div class="buy">
                <em>&yen;<%= item.price %></em>
                <span><i class="glyphicon glyphicon-shopping-cart"></i>去购买</span>
              </div>
            </div>
          </li>
          <% end %>



            <div class="row round style">
    <div class="col-md-7">
      <div class="cover">
        <%= link_to style_path style do %>
        <%= image_tag style.photos.first.file.url %>
        <% end %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="info">
        <div class="summary">
          <h4> 介绍 </h4>
          <p class="body"><%= style.body %></p>
        </div>

        <div class="links">
          <ul>
          <% style.items.each do |item| %>
            <li>
              <span class="pic"><%= link_to style_path(style) do %> <%= image_tag item.cover %><% end %></span>
              <span class="title"><%= link_to item.title,style_path(style) %></span>
              <span class="buy"><%= link_to '去购买', item.url, class: 'btn btn-xs'%></span>
              <span class="price">&yen;<%= item.price %></span>
            </li>
          <% end %>
          </ul>
        </div>

        <div class="tools">
          <ul class="pagehead-actions">
            <li>
              <%= link_to like_style_path(@style), rel: 'nofollow', class: "btn like btn-xs with-count" do %>
              <span class="glyphicon glyphicon-heart"></span>喜欢
              <% end %>
              <span class="social-count"><%= @style.likes_count || 0 %></span>
            </li>

            <li>
              <a href="/" class="btn btn-xs with-count favourite" rel="nofollow">
                <span class="glyphicon glyphicon-star"></span>收藏
              </a>
              <span class="social-count">0</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>