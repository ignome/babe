<%= simple_form_for([:cpanel, @item], :url => bind_cpanel_items_path, html:{ method: 'post' }) do |f| %>
<%= f.input :id, as: 'hidden' %>
<table class="table" width="100%" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
    <tr>
      <td width="15"><input type="checkbox" name="id[]" value="<%=tag.id%>" <%= @selected.include?(tag.id) ? 'checked' : '' %> /></td>
      <td>
        <%= tag.name %>
      </td>
    </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="2">
        <div class="btn-group btn-group-xs">
          <button type="submit" class="btn btn-primary" name="do" value="bind">设置标签</button>
          <button type="submit" class="btn btn-warning" name="do" value="unbind">取消设置</button>
        </div>
      </td>
    </tr>
  </tfoot>
</table>
<% end %>