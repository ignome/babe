<%= render 'cpanel/shared/tabs_of_task' %>

<ul>
  <li><a href="/cpanel/tasks/todaypromo?from=taobao">淘宝天天特价</a></li>
</ul>

<table class="table" width="100%" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th width="30">
        <input type="checkbox" name="all" id="chkall">
      </th>
      <th width="64">小图</th>
      <th>商品名称</th>
      <th width="100" >价格</th>
      <th width="100">生成时间</th>
      <th width="120"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td >
        <input type="checkbox" name="id[]" value="<%=item.id %>">
      </td>
      <td>
        <%= link_to item.url do %>
        <%= image_tag item.cover, size: '50x50' %>
        <% end %>
      </td>

      <td><%= link_to item.title, item.url %></td>
      <td><%= item.price %></td>
      <td><%= item.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
      <td>删除 推荐</td>
    </tr>
    <% end %>

    <tfoot>
      <td colspan="9">
        <div class="btn-group btn-group-xs">
          <button type="button" class="btn btn-danger">删除选中</button>
          <button type="button" class="btn btn-info">设为推荐</button>
          <button type="button" class="btn btn-success">取消推荐</button>          
        </div>

        <%= will_paginate @items%>

      </td>
    </tfoot>
  </tbody>
</table>