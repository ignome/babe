<%= simple_form_for([:cpanel,@position], html:{class: 'form-horizontal'}) do |f| %>
  <%= render 'shared/error', :target => @position %>

    <%= f.input :title %>
    <%= f.input :slug %>
    <%= f.input :width %>
    <%= f.input :height %>

    <%= f.input :description, as: 'text' %>

    <%= f.submit t("common.submit"), :class => "btn btn-primary", 'data-disable-with' => t("common.submitting") %>
     

<% end %>
