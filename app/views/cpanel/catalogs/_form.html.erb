<%= simple_form_for([:cpanel,@catalog], html:{class: 'form-horizontal'}) do |f| %>
  <%= render 'shared/error', :target => @catalog %>

    <%= f.input :name %>
    <%= f.association :parent %>
    <%= f.input :slug %>
    <%= f.input :sort %>

    <%= f.submit t("common.submit"), :class => "btn btn-primary", 'data-disable-with' => t("common.submitting") %>

<% end %>
