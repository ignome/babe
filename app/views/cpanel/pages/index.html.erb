<table class="table table-hover">
  <thead>
    <tr >
      <td class="first">Id</td>
      <td>分类</td>
      <td>标题</td>
      <td>排序</td>
      <td>发布时间</td>
      <td></td>
    </tr>
  </thead>

<% @posts.each do |page| %>
  <tr>
    <td class="first"><%= page.id %></td>
    <td><%= page.catalog.name if page.catalog%></td>
    <td><%= page.title %></td>
    <td><%= page.sort %></td>
    <td><%= page.created_at.strftime("%Y-%m-%d") %></td>
    <td>
      <%= link_to '编辑', edit_cpanel_page_path(page) , :class => "icon small_edit" %>
      <%= link_to '删除', cpanel_page_path(page), 'data-confirm' => 'Are you sure?', :method => :delete, :class => "icon small_delete" %>
    </td>
  </tr>
<% end %>
</table>

