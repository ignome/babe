<%= simple_form_for([:cpanel, @category], html:{class: 'form-horizontal'}) do |f| %>
  <%= f.input :name, label: '分类名称', label_html: { class: 'col-sm-3 control-label no-padding-right' }, input_html: {class: 'col-xs-10 col-sm-5'} %>
  
  <div class="form-group string optional category_name">
    <label class="string optional col-sm-3 control-label " for="category_name">上级分类</label>
    <div class="col-sm-9">
      <select name="category[parent]" id="category">
        <option value="0">请选择上级分类</option>
      </select>
    </div>
  </div>
  
  <%= f.input :slug, label: '访问路径', input_html: {class: 'form-horizontal'} %>
  <%= f.input :sort, input_html:{class:'input-mini'},label: '显示顺序' %>

  <div class="form-actions">
    <label class="string optional col-sm-3 control-label "></label>
    <%= f.submit t('common.submit'), :class => "btn btn-primary no-border", 'data-disable-with' => t("common.submitting") %>
    <%= link_to '返回', cpanel_categories_path, class: 'btn' %>
  </div>
<% end %>

<%= render 'cpanel/categories/treeview' %>

<% content_for :scripts do %>
<script type="text/javascript">
Treeview.render(tree['tree'], 'category');
</script>
<% end %>