
<table class="table" width="100%" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <td class="first">Id</td>
      <td>上级节点</td>
      <td>名称</td>
      <td>主题数</td>
      <td>排序</td>
      <td></td>
    </tr>
  </thead>
<tbody>

<% @nodes.each do |node| %>
  <tr>
    <td class="first"><%= node.id %></td>
    <td><%= node.section.name %></td>
    <td><%= node.name %></td>
    <td><%= node.topics_count %></td>
    <td><%= node.sort %></td>
    <td>
      <%= link_to '编辑', edit_cpanel_node_path(node), :class => "icon small_edit" %>
      <%= link_to '删除', cpanel_node_path(node), 'data-confirm' => 'Are you sure?' , :method => :delete, :class => "icon small_delete" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to '创建新节点', new_cpanel_node_path %>