
<table class="table" width="100%" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <td class="first">Id</td>
      <td>名称</td>
      <td>排序</td>
      <td></td>
    </tr>
  </thead>
<tbody>
<% @sections.each do |section| %>
  <tr>
    <td class="first"><%= section.id %></td>
    <td><%= section.name %></td>
    <td><%= section.sort %></td>
    <td>
      <%= link_to '编辑', edit_cpanel_section_path(section) , :class => "icon small_edit" %>
      <%= link_to '删除', cpanel_section_path(section), 'data-confirm' => 'Are you sure?', :method => :delete, :class => "icon small_delete" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

