<%= simple_form_for @item.comments.new, html:{class: 'form-horizontal'} do |f| %>
<dl class="message">
  <dt><img src="/assets/portrait.png" /></dt>
  <dd>
    <%= f.input :subject_type, as: 'hidden' %>
    <%= f.input :subject_id, as: 'hidden' %>
    <%= f.input :body, as: 'text' %>
    <%= f.submit t("common.submit"), :class => "btn btn-primary", 'data-disable-with' => t("common.submitting") %>
  </dd>
</dl>
<% end %>