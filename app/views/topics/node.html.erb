<div class="container" id="main">
  <div class="row">    
    <div class="col-md-8 list">
      <div class="node">
        <%= @node.name %>
      </div>

      <div class="toolbar">
        <a href="">全部</a>
        <span class="sparator">-</span>
        <a href="">精华</a>
        <span class="sparator">-</span>
        <a href="">知识</a>
        <span class="sparator">-</span>
        <a href="">问答</a>

        <span class="sparator">|</span>

        <a href="">最新</a>
        <span class="sparator">-</span>
        <a href="">最多回复</a>
      </div>

      <div class="topics">
        <%= render partial: 'topic', collection: @topics %>
      </div>
    </div>

    <div class="col-md-4 sider">
      <div class="new">
        <div class="">
          <%= link_to new_topic_path do %>
          <i class="glyphicon glyphicon-edit"></i>发表新话题
          <% end %>
        </div>
        <div class="">
          <a href="">
           <i class="glyphicon glyphicon-tasks"></i>申请新主题
          </a>
        </div>
      </div>

      <div class="category clearfix">
        <div class="hd"><h5><i class="glyphicon glyphicon-list"></i>主题</h5></div>
        <%= render partial: 'section', collection: @sections %>
      </div>

      <div class="users">
        <div class="hd"><h5>活跃用户</h5></div>
        <ul>
          <% @users.each do |user| %>
          <li><%=user_avatar_tag(user, :normal) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>