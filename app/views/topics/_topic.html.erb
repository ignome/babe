<div class="topic clearfix">
  <div class="reply">
    <div class="count">250</div>
    <div class="name">回复</div>
  </div>

  <div class="summary">
    <h3><%=link_to topic.title, topic_path(topic) %></h3>
    <div class="user">
      <%= user_avatar_tag(topic.user, :small, text: true) %>
      <a href="">浏览1233</a> 
      <a href="">喜欢1233</a>
      <a href="">回复1233</a>
      <span class="time"><%= topic.created_at.strftime("%H:%M:%S") %>
    </div>
    <div class="text"><%= truncate(topic.body, length: 140) %></div>
    <ul class="thumb clearfix">
      <% topic.photos.each do |photo| %>
      <li ><%= image_tag photo.file.url, width: '200' %></li>
      <% end %>
    </ul>
  </div>
</div>
    