<div id="signup">
  <div class="container">
    <div class="row">
      <%= render "shared/error", :target => resource %>
      
      <div class="col-md-7">
        <div class=""><img src="/signin.jpg" /></div>
      </div>

      <div class="col-md-5 sidebar">
        <%= simple_form_for(resource, :url => registration_path(resource_name), defaults: { input_html: { class: 'form-control' } }) do |f| %>   
            <%= f.input :login, label: '登录账号' %>
            <%= f.input :name, label: '显示昵称' %>
            <%= f.input :email, label: '邮件地址', :input_html => { :class => "form-control", :placeholder => "foo@bar.com" } %>

            <%= f.input :password, label: '登录密码'%>
            <%= f.input :password_confirmation, label: '确认登录密码' %>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %> <a href="">有个用户注册条款，还是过去看看</a>
                  </label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9">
                  <%= f.submit '同意注册条款并提交', :class => "btn btn-success", 'data-disable-with' => t("users.signing") do %>
                  <i class="glyphicon glyphicon-thumbs-up"></i>
                  <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>