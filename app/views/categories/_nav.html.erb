<div class="category row category">
  
  <ul class="cate_list_wrap_v1">
    <li class="cate_li_v1 cate_o_v1  li_shopping">
      <div class="cate_show_v1">
        <a href="/active" class="nav_link_v1">
          <span class="fl">关注动态</span>
          <span class="u_a_num user_active_num clearfix fl" style="display: none;">(<span class="con"></span>)</span>
          <b></b>
        </a>
      </div>
      <div class="cate_detail_v1"></div>
    </li>

    <li class="cate_li_v1 cate_o_v1">
      <div class="cate_show_v1">
          <a href="/shopping/1/all/new/" class="nav_link_v1">
          24小时最新
          <b></b>
        </a>
      </div>
    </li>

    <li class="cate_li_v1 cate_o_v1">
      <div class="cate_show_v1">
          <a href="/book/selection" class="nav_link_v1">
          编辑推荐
          <b></b>
        </a>
      </div>
    </li>

    <% @roots.each do |root| %>
    <a name="<%= root.slug%>"></a>
    <li class="cate_li_v1 cate_highlight<%="_#{root.slug}" unless root.id == @category.id %> li_<%=root.slug%>">
      <div class="cate_show_v1">
          <a href="<%= explore_path(root.slug)%>" class="nav_link_v1 c_top">
              <img src="/img/transparent-v2.gif" alt="" class="nav_icon_v1 clothing"><%= root.name %>
              <b></b>
          </a>
      </div>
      <div class="cate_detail_v1">
        <% if root.id == @category.id %>
        <% root.child.each do |child| %>
        <div class="c_d_list">
          <div class="fl c_d_mod">
              <%= link_to child.name, explore_path(@category.slug, child.slug), class: "title" %>
          </div>
          <div class="c_d_words_box">
              <p class="c_d_words_list">
                <% child.child.each do |node| %>
                <a href="<%="/explore/#{root.slug}/#{child.slug}/#{node.slug}" %>"><span class="c_text_9470_12994"><%= node.name %></span></a>
                <% end %>
              </p>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
      <div class="cate_three_list"></div>
    </li>
    <% end %>
  </ul>

  <div class="choose_more_box"></div>
</div>